    rm /userdata/saves/mame/mame/cfg/greatgun.cfg
    rm /userdata/saves/mame/mame/cfg/gunbustr.cfg
    rm /userdata/saves/mame/mame/cfg/gunchamp.cfg
    rm /userdata/saves/mame/mame/cfg/hellngt.cfg
